<%= form_with model: @post, local: true, html: { class: "mt-8 mb-8 block w-full" } do |f| %>
  <%= f.text_area :body, id: "new-post-body", rows: 2, placeholder: "Your message...", 
    class: "block border rounded w-full p-2" %>
  <%= f.submit "Post", 
    class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mt-2 rounded" %>
<% end %>